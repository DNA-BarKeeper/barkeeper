<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Collections</h3>
  </div>

  <div class="panel-body">
    <div class="wideTable">
      <table id="collections" data-source="<%= collections_url(format: 'json')%>" class="table table-striped table-hover table-bordered">
        <thead>
        <tr>
          <th>Name</th>
          <th>Acronym</th>
          <th>Updated at</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>

<p>
  <%= link_to new_collection_path, class: 'btn btn-default', title: 'Create a new collection record' do %>
    <span class="glyphicon glyphicon-unchecked"></span>
  <% end %>
  Create a new collection record
</p>
