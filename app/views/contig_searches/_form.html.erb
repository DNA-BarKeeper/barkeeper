<div class="panel panel-default">
  <div class="panel-heading">
    <h3  class="panel-title">Advanced Contig Search</h3>
  </div>

  <div class="panel-body">
    <%= form_for @contig_search do |f| %>
        <div class="field">
          <%= f.label :title, 'Title (if you leave this field empty the search will not be saved)' %><br />
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :name, 'Contig name' %><br />
          <%= f.text_field :name, data: { autocomplete_source: filter_contigs_path }, include_blank: true, class: 'form-control' %>
        </div>
        <br/>
        <div>
          <%= f.radio_button :assembled, "assembled" %>
          <%= f.label :assembled, "Assembled" %>
          <%= f.radio_button :assembled, "unassembled" %>
          <%= f.label :unassembled, "Unassembled" %>
          <%= f.radio_button :assembled, "both", :checked => true %>
          <%= f.label :both_assembly, "Both" %>
        </div>
        <div>
          <%= f.radio_button :verified, "verified" %>
          <%= f.label :assembled, "Verified" %>
          <%= f.radio_button :verified, "unverified" %>
          <%= f.label :unverified, "Unverified" %>
          <%= f.radio_button :verified, "both", :checked => true %>
          <%= f.label :both_verify, "Both" %>
        </div>
        <div class="field">
          <%= f.label :verified_by %><br />
          <%= f.text_field :verified_by, data: { autocomplete_source: User.order(:name).map(&:name) }, include_blank: true, class: 'form-control' %>
        </div>
        <br/>
        <div>
          <%= f.label :has_warnings, 'Search for contigs that have marker sequences with unsolved SATIVA warnings:' %><br>
          <%= f.radio_button :has_warnings, "yes" %>
          <%= f.label :yes, "Yes" %>
          <%= f.radio_button :has_warnings, "no" %>
          <%= f.label :no, "No" %>
          <%= f.radio_button :has_warnings, "both", :checked => true %>
          <%= f.label :both, "Search for both" %>
        </div>
        <br/>
        <div class="field">
          <%= f.label :marker %><br />
          <%= f.text_field :marker, data: { autocomplete_source: Marker.order(:name).map(&:name) }, include_blank: true, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :specimen %><br />
          <%= f.text_field :specimen, data: { autocomplete_source: filter_individuals_path(format: 'json') }, include_blank: true, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :species %><br />
          <%= f.text_field :species, data: { autocomplete_source: filter_species_index_path }, include_blank: true, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :family %><br />
          <%= f.text_field :family, data: { autocomplete_source: filter_families_path }, include_blank: true, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :order %><br />
          <%= f.text_field :order, data: { autocomplete_source: Order.order(:name).map(&:name) }, include_blank: true, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :age, "Created between" %><br />
          <%= f.text_field :min_age, class: 'form-control' %> and <%= f.text_field :max_age, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :update, "Updated between" %><br />
          <%= f.text_field :min_update, class: 'form-control' %> and <%= f.text_field :max_update, class: 'form-control' %>
        </div>
        <br>
        <div class="actions"><%= f.submit "Search", class: 'btn btn-default' %></div>
    <% end %>
  </div>
</div>
