<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Contig Search Results</h3>
    <p>Search parameters: </p>
    <p>Name: <%= @contig_search.name %>, Marker: <%= @contig_search.marker_id %>, Assembled: <%= @contig_search.assembled %></p>
  </div>
  <div class="panel-body">

    <div class="wideTable">
      <table id="contig_search" data-source="<%= contig_search_url(@contig_search, format: 'json') %>" class="table table-striped table-hover table-bordered">
        <thead>
        <tr>
          <th>Name</th>
          <th>Species</th>
          <th>Specimen</th>
          <th>Assembly complete?</th>
          <td>Last updated</td>
          <th></th>
        </tr>
        </thead>

        <tbody>
        </tbody>
      </table>
    </div>

  </div>
</div>

<p>
  <%= link_to 'Start a new contig search', new_contig_search_path %>
</p>