<div class="panel panel-default" style="opacity: 0.7;">

  <div class="panel-heading">
    <h3 class="panel-title">Impressum</h3>
  </div>

  <% if ENV['HEROKU_RELEASE_VERSION'] %>
      <% version = ENV['HEROKU_RELEASE_VERSION'] %>
      <% version = version.match(/^v(\d+)/)[1] %>
  <% else %>
      <% version = '' %>
  <% end %>

  <% if ENV['HEROKU_RELEASE_CREATED_AT'] %>
      <% date = ENV['HEROKU_RELEASE_CREATED_AT'] %>
      <% date=Time.zone.parse(date) %>
  <% else %>
      <% date = '' %>
  <% end %>

  <% if ENV['HEROKU_SLUG_DESCRIPTION'] %>
      <% change = ENV['HEROKU_SLUG_DESCRIPTION'] %>
  <% else %>
      <% change = '' %>
  <% end %>

  <% if ENV['HEROKU_SLUG_COMMIT'] %>
      <% commit = ENV['HEROKU_SLUG_COMMIT'] %>
      <% commit_url =  'https://bitbucket.org/kai42/gbol5/commits/'+commit %>
  <% else %>
      <% commit = '' %><% commit_url = '' %>
  <% end %>

  <div class="panel-body">
    <p>GBOL5 Web Application, version <%= version %>, released <%= date %>, <%= change %>, <a href="<%= commit_url %>">commit <%= commit %></a> </p>
