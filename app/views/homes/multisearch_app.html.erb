<div class="panel panel-default">

  <div class="panel-heading">
    <h3 class="panel-title">Search Results for "<%= params[:search] %>"</h3>
  </div>

  <div class="panel-body">
    <p>
      <%= pluralize(@results.size, 'record')%> were found for your search term "<%= params[:search] %>":
    </p>

    <div class="multisearch-results">
      <%= multisearch_results(@results) %>
      <%= will_paginate @results, renderer: BootstrapPagination::Rails, previous_label: "&laquo;", next_label: "&raquo;",class: "small-font" %>
    </div>
  </div>
</div>