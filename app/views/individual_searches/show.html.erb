<div class="panel panel-default">
  <div class="panel-heading">
    <p><h3 class="panel-title">Specimen Search Results <%= title(@individual_search) %></h3></p>
    <b>Searched project: </b><%= project(@individual_search) %><br>
    <p>
      <b>Search parameters:</b><br>
      <%= attributes(@individual_search) %>
    </p>
    <p>
      <%= link_to 'Edit parameters', edit_individual_search_path(@individual_search), class: 'btn btn-default' %>
    </p>
  </div>
  <div class="panel-body">

    <div class="wideTable">
      <table id="individual_search_results" data-source="<%= individual_search_url(@individual_search, format: 'json') %>" class="table table-striped table-hover table-bordered" style="width: 100%;" >
        <thead>
        <tr>
          <th>Specimen ID</th>
          <th>Associated Taxon</th>
          <th>Herbarium</th>
          <th>Latitude</th>
          <th>Longitude</th>
          <th>Last updated</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        </tbody>
      </table>
    </div>

  </div>
</div>

<p>
  <%= link_to 'Start a new specimen search', new_individual_search_path, class: 'btn btn-default' %>
  <%= link_to 'Go to your specimen searches index', individual_searches_path, class: 'btn btn-default' %>
  <%= link_to 'Go to specimens index', individuals_path, class: 'btn btn-default' %>
</p>

<p>
  <%= link_to 'Download results as CSV table', individual_search_export_as_csv_path(@individual_search), class: 'btn btn-default' %>
</p>
