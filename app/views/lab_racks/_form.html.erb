
<div class="panel panel-default">

  <div class="panel-heading"><h3 class="panel-title"><%= @lab_rack.rackcode %></h3></div>

  <div class="panel-body"><%= form_for(@lab_rack) do |f| %>

        <div class="form-group">
          <%= f.label :rackcode %>
          <%= f.text_field :rackcode, :autofocus => true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :rack_position %>
          <%= f.text_field :rack_position, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :shelf %>
          <%= f.text_field :shelf, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label 'Freezer' %>
          <%= f.collection_select(:freezer_id, Freezer.all, :id, :freezercode, {}, { class: 'form-control' }) %>
        </div>

      <%= render :partial => 'shared/associated_projects', :locals => { :form => f, :projects => associated_projects(@lab_rack) } %>

        <%= f.submit 'Update', :class => 'btn btn-default' %>
    <% end %>
  </div>
</div>