<div class="panel panel-default">
  <div class="panel-heading">
    <h3  class="panel-title">Advanced Marker Sequence Search</h3>
  </div>

  <div class="panel-body">
    <%= form_for @marker_sequence_search do |f| %>
      <div class="field">
        <%= f.label :title, 'Title (if you leave this field empty the search will not be saved)' %><br />
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :name, 'Marker sequence name' %><br />
        <%= f.text_field :name, data: { autocomplete_source: filter_contigs_path }, include_blank: true, class: 'form-control' %>
      </div>
      <br/>
      <div>
        <%= f.radio_button :verified, "verified" %>
        <%= f.label :assembled, "Verified" %>
        <%= f.radio_button :verified, "unverified" %>
        <%= f.label :unverified, "Unverified" %>
        <%= f.radio_button :verified, "both", :checked => true %>
        <%= f.label :both_verify, "Both" %>
      </div>
      <br/>
      <div>
        <%= f.check_box :has_species %>
        <%= f.label :has_species, "Is assigned to a species" %>
      </div>
      <br/>
      <div class="field">
        <%= f.label :marker %><br />
        <%= f.text_field :marker, data: { autocomplete_source: Marker.order(:name).map(&:name) }, include_blank: true, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :specimen %><br />
        <%= f.text_field :specimen, data: { autocomplete_source: filter_individuals_path(format: 'json') }, include_blank: true, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :species %><br />
        <%= f.text_field :species, data: { autocomplete_source: filter_species_index_path }, include_blank: true, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :family %><br />
        <%= f.text_field :family, data: { autocomplete_source: filter_families_path }, include_blank: true, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :order %><br />
        <%= f.text_field :order, data: { autocomplete_source: Order.order(:name).map(&:name) }, include_blank: true, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :higher_order_taxon %><br />
        <%= f.text_field :higher_order_taxon, data: { autocomplete_source: HigherOrderTaxon.order(:name).map(&:name) }, include_blank: true, class: 'form-control' %>
      </div>
      <br>
      <div class="field">
        <%= f.label :age, "Sequence length between (leave blank to not use a length limit)" %><br />
        <%= f.number_field :min_length, class: 'form-control' %> and <%= f.number_field :max_length, class: 'form-control' %>
      </div>
      <br>
      <div class="actions"><%= f.submit "Search" %></div>
    <% end %>
  </div>
</div>
