<div class="panel panel-default">
  <div class="panel-heading">
    <p><h3 class="panel-title">Marker Sequence Search Results<%= " - #{@marker_sequence_search.title} " unless @marker_sequence_search.title&.empty? %></h3></p>
    <p>Search parameters:<br>
      <%= "Name: #{@marker_sequence_search.name}, " unless @marker_sequence_search.name&.empty? %>
      <%= "verified, " if @marker_sequence_search.verified == 'verified' %>
      <%= "not verified, " if @marker_sequence_search.verified == 'unverified' %>
      <%= "Marker: #{@marker_sequence_search.marker}, " unless @marker_sequence_search.marker&.empty? %>
      <%= "Specimen: #{@marker_sequence_search.specimen}, " unless @marker_sequence_search.specimen&.empty? %>
      <%= "Species: #{@marker_sequence_search.species}, " unless @marker_sequence_search.species&.empty? %>
      <%= "Family: #{@marker_sequence_search.family}, " unless @marker_sequence_search.family&.empty? %>
      <%= "Order: #{@marker_sequence_search.order}, " unless @marker_sequence_search.order&.empty? %>
      <%= "Length minimum: #{@marker_sequence_search.min_length}, " if @marker_sequence_search.min_length %>
      <%= "Length maximum: #{@marker_sequence_search.max_length}, " if @marker_sequence_search.max_length %>
    </p>
  </div>
  <div class="panel-body">

    <div class="wideTable">
      <table id="marker_sequence_search_results" data-source="<%= marker_sequence_search_url(@marker_sequence_search, format: 'json') %>" class="table table-striped table-hover table-bordered" style="width: 100%;" >
        <thead>
        <tr>
          <th>Name</th>
          <th>Species</th>
          <th>Last updated</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        </tbody>
      </table>
    </div>

  </div>
</div>

<p>
  <%= link_to 'Start a new marker sequence search', new_marker_sequence_search_path, class: 'btn btn-default' %>

  <%= link_to 'Go to your marker sequence searches index', marker_sequence_searches_path, class: 'btn btn-default' %>

  <%= link_to 'Go to marker sequences index', marker_sequences_path, class: 'btn btn-default' %>
</p>

<p>
  <%= link_to 'Download results as Fasta', marker_sequence_search_export_as_fasta_path(@marker_sequence_search), method: 'post', class: 'btn btn-default' %>
</p>