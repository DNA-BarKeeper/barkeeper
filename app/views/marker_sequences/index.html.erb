<div class="panel panel-default">

  <div class="panel-heading">
    <h3 class="panel-title">Marker Sequences</h3>
  </div>

  <div class="panel-body">

    <div class="wideTable">
      <%= link_to 'Advanced Marker Sequence Search', new_marker_sequence_search_path, class: 'btn btn-default pull-right', :style => 'margin-bottom: 5px' %>
      <table id="marker_sequences" data-source=" <%= marker_sequences_url(format: "json") %>"  class="table table-striped table-hover table-bordered">

      <thead>
        <tr>
          <th>Name</th>
          <th>Species</th>
          <th>Last Updated</th>
          <th></th>
        </tr>
      </thead>

      <tbody></tbody>
      </table>
    </div>
  </div>
</div>

<p>
  <%= link_to new_marker_sequence_path, class: 'btn btn-default', title: 'Create a new marker sequence entry' do %>
    <span class="glyphicon glyphicon-unchecked"></span>
  <% end %>
  Create a new marker sequence entry
</p>
