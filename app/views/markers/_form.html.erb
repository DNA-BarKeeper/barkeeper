<div class="panel panel-default">
  <div class="panel-heading"><h3 class="panel-title"><%= @marker.name%></h3></div>
  <div class="panel-body"><%= form_for(@marker) do |f| %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label 'GBOL marker' %>
        <%= f.check_box :is_gbol  %>
        </div>

      <div class="form-group">
        <%= f.label 'Expected number of reads' %>
        <%= f.select(:expected_reads, options_for_select([['1', 1], ['2', 2], ['3', 3], ['4', 4]], @marker.expected_reads)) %>
      </div>

      <div class="form-group">
        <%= f.label 'Alternative name' %>
        <%= f.text_field :alt_name, class: 'form-control' %>
      </div>

      <%= f.submit 'Update', :class => 'btn btn-default' %>
  <% end %></div>
</div>