<div class="panel panel-default">

  <div class="panel-heading">
    <h3 class="panel-title">Markers</h3>
  </div>

  <div class="panel-body">
    <div class="wideTable">
      <table id="markers" class="table table-striped table-hover table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Alternative Name</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @markers.each do |marker| %>
            <tr>
              <td><%= link_to marker.name, edit_marker_path(marker) %></td>
              <td><%= marker.alt_name %></td>
              <td><%= link_to 'Delete', marker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<p>
  <%= link_to new_marker_path, class: 'btn btn-default', title: 'Create a new marker entry' do %>
    <span class="glyphicon glyphicon-unchecked"></span>
  <% end %>
  Create a new marker entry
</p>
