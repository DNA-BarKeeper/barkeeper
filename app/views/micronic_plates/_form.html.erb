

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @micronic_plate.name%></h3>

  </div>

  <div class="panel-body"><%= form_for(@micronic_plate) do |f| %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label 'Rack' %>
          <%= f.collection_select(:lab_rack_id, LabRack.all, :id, :rackcode, :include_blank => '<no selection>') %>
        </div>


        <div class="form-group">
          <%= f.label :location_in_rack %>
          <%= f.text_field :location_in_rack, :autofocus => true, class: 'form-control' %>
        </div>

        <%= f.submit 'Update', :class => 'btn btn-default' %>
    <% end %>
  </div>
</div>