<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">SATIVA Mislabel Analyses</h3>
  </div>
  <div class="panel-body">

    <div class="wideTable">
      <table id="mislabel_analyses" data-source="<%= mislabel_analyses_path(format: "json") %>" class="table table-striped table-hover table-bordered" >
        <thead>
        <tr>
          <th>Title</th>
          <th>Created at?</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        </tbody>
      </table>
    </div>

  </div>

  <br>

  <% if user_signed_in? && current_user.admin? %>
    <div class="well">
      Import SATIVA analysis results (*.mis file)
      <%= form_tag import_mislabel_analyses_path, multipart: true do %>
        <%= file_field_tag :file %>
        <br>
        <%= submit_tag "Import" %>
      <% end %>
    </div>
  <% end %>

</div>

