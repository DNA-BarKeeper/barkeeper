<%= show_val_errors(@order)%>

<div class="authform">
  <h4><%= @order.name%></h4>

<%= form_for(@order) do |f| %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :author %>
        <%= f.text_field :author, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label 'Belongs to' %>
        <%= f.collection_select(:higher_order_taxon_id, HigherOrderTaxon.all, :id, :name) %>
      </div>


      <%= f.submit 'Update', :class => 'button right' %>
<% end %>
</div>
