<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @plant_plate.name%></h3>
  </div>

  <div class="panel-body">
    <%= form_for(@plant_plate) do |f| %>
      <div class="form-group">
        <%= f.label :name, "Name / Code" %>
        <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
      </div>

      <%= render :partial => 'shared/associated_projects', :locals => { :form => f, :projects => associated_projects(@plant_plate) } %>

      <%= f.submit 'Update', :class => 'btn btn-default' %>
    <% end %>
  </div>
</div>