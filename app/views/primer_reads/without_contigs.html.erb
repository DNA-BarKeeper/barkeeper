<div class="panel panel-default">

  <div class="panel-heading">
    <h3 class="panel-title">Reads where no contig could be assigned</h3>
  </div>

  <div class="panel-body">

    <div class="wideTable">

      <table id="reads_without_contigs"  data-source="<%= without_contigs_primer_reads_path(format: "json") %>"  class="table table-striped table-hover table-bordered">

        <thead>
        <tr>
          <th>Name</th>
          <th>Assembled?</th>
          <th>Contig</th>
          <th>Last updated</th>
          <th></th>
        </tr>
        </thead>

        <tbody>

        <% PrimerRead.where(:contig => nil).each do |read| %>

            <tr>
              <td><%= link_to read.name, edit_primer_read_path(read) %></td>

              <td> <%= read.updated_at.in_time_zone("CET").strftime("%Y-%m-%d %H:%M:%S") %></td>
              <td><%= link_to 'Delete', read, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>

        <% end %>
        </tbody>

      </table>
    </div>

    <br>

  </div>

</div>