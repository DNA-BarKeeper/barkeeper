<div class="panel panel-default">

  <div class="panel-heading">
    <h3 class="panel-title">Taxon Search Results for "<%= params[:query] %>"</h3>
  </div>

  <div class="panel-body">

    <%= form_tag add_to_taxa_projects_path, :method => :get do %>
      <div><%= taxa_selects(@result) %></div>

      <br>

      <div>
        <%= label :project, 'Select one or more projects to add all selected taxa recursively:' %><br>
        <%= collection_select :project, :id, user_projects, :id, :name, {}, { multiple: true } %>
      </div>

      <br><br>

      <div>
        <%= button_to 'Add project(s)', { type: 'Submit', method: 'get' }, { class: 'btn btn-default' } %>
      </div>
    <% end %>

  </div>
</div>