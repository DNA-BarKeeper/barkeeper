<div class="panel panel-default">

  <div class="panel-heading">
    <h3 class="panel-title">Responsibilities</h3>
  </div>

  <div class="panel-body">

    <div class="wideTable">
      <table class="table table-striped table-hover table-bordered">
        <thead>

        <tr>
          <th>Name</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @responsibilities.each do |responsibility| %>
          <tr>
            <td><%= responsibility.name %></td>
            <td><%= responsibility.description %></td>
            <td><%= link_to 'Show', responsibility %></td>
            <td><%= link_to 'Edit', edit_responsibility_path(responsibility) %></td>
            <td><%= link_to 'Delete', responsibility, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>

<p><%= link_to 'New Responsibility', new_responsibility_path %></p>
<p><%= link_to 'Back to Users', users_path %></p>