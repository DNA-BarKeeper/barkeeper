<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Shelf <%= @shelf.name %></h3>
  </div>

  <div class="panel-body"><%= form_for(@shelf) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :freezer %>
        <%= f.collection_select(:freezer_id, Freezer.all, :id, :freezercode, { include_blank: true }, { class: 'form-control' }) %>
      </div>

      <%= render :partial => 'shared/associated_projects', :locals => { :form => f } %>

      <%= f.submit 'Update', :class => 'button right' %>
    <% end %>
  </div>
</div>