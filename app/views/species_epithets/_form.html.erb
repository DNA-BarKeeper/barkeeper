<%= show_val_errors(@species_epithet)%>

<div class="authform">
  <h4><%= @species_epithet.name%></h4>
<%= form_for(@species_epithet) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
      </div>

      <%= f.submit 'Update', :class => 'button right' %>
<% end %>
</div>