<div class="panel panel-default">

  <div class="panel-heading"><h3 class="panel-title">Tissue Types</h3></div>

  <div class="panel-body"><table class="table table-striped table-hover table-bordered">


  <thead>
    <tr>
      <th>Tissue Type</th>
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% @tissues.each do |tissue| %>
      <tr>
        <td><%= link_to tissue.name, edit_tissue_path(tissue) %></td>
        <td><%= link_to 'Delete', tissue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table></div>
</div>

<p>
  <%= link_to new_tissue_path, class: 'btn btn-default', title: 'Create a new tissue type entry' do %>
    <span class="glyphicon glyphicon-unchecked"></span>
  <% end %>
  Create a new tissue type entry
</p>
