<div class="panel panel-default">
  <div class="panel-heading"><h4>Tissue Types</h4></div>

  <table class="table">


  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tissues.each do |tissue| %>
      <tr>
        <td><%= tissue.name %></td>
        <td><%= link_to 'Show', tissue %></td>
        <td><%= link_to 'Edit', edit_tissue_path(tissue) %></td>
        <td><%= link_to 'Delete', tissue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to 'New Tissue', new_tissue_path %>

