<div class="panel panel-default">

  <div class="panel-heading">
    <h3 class="panel-title">Users</h3>
  </div>

  <div class="panel-body">
    <div class="wideTable">
      <table id="users" class="table table-striped table-hover table-bordered">
        <thead>
        <tr>
          <th>Name</th>
          <th>E-mail</th>
          <th>Lab</th>
          <th>Projects</th>
          <th>Role</th>
          <th>Responsibilities</th>
          <th>Last sign-in</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @users.includes(:lab).each do |user| %>
          <tr>
            <%= render user %>
            <td>
              <%= link_to 'Delete', user_path(user), :method => :delete, data: { confirm: "Are you sure you want to delete user #{user.name}?" } %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<p>
  <%= link_to new_user_path, class: 'btn btn-default', title: 'Sign up a new user' do %>
    Sign up a new user
  <% end %>
</p>
